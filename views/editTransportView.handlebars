<br>
<br>
    <div class="content container">
        <h2 class="col-xs-10 col-xs-offset-1 text">
            Edit the Transport
        </h2>
        <br>
        <hr>
        <div class="row textLarge">
            <form class="col-xs-8 col-xs-offset-2 text" method="post" action="/trip/transport/edit/{{transport.trip}}/{{transport._id}}">
            <label class="col-sm-4">Transport</label>
            <div class="search col-sm-8">
            <input id="transport" type="text" name="transport" class="col-sm-6 input-group input-group-lg" value="{{transport.name}}" placeholder="e.g. flight">
            </div>
            <br>
            <br>
            <label class="col-sm-4">Other Info</label>
            <input type="text" class="col-sm-4 input-group input-group-lg" id="info" name="info" value="{{transport.info}}" placeholder="e.g. flight number">
            <br>
            <label class="col-sm-4">Date</label>
            <input type="text" class="col-sm-4 input-group input-group-lgs" id="date" name="date" value="{{date}}" placeholder="yyyy-mm-dd">
            <br>
            <label class="col-sm-4">Time</label>
            <input type="text" class="col-sm-4 input-group input-group-lgs" id="time" name="time" value="{{time}}" placeholder="hh:mm">
            <br>
            <input type="submit" value="Done" class="btn btn-primary">
            </form>
        </div>               
    </div>


<script src="../../../../../js/jquery.plugin.min.js"></script>
<script src="../../../../../js/jquery.timepicker.min.js"></script>
<script>
    $('#time').timepicker({'timeFormat': 'H:i','scrollDefault': 'now'});
</script>
