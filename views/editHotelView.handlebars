<br>
    <div class="content container">
        <h2 class="col-xs-10 col-xs-offset-1 text">
            Edit the hotel in {{city}}
        </h2>
        <br>
        <hr>
        <div class="row textLarge">
            <form class="col-xs-8 col-xs-offset-2 text" method="post" action="/trip/hotel/edit/{{tripId}}/{{formatDate}}">
            <label class="col-sm-4">Hotel</label>
            <div class="search col-sm-8">
            <input id="attraction" type="text" name="name" class="col-sm-6 input-group input-group-lg" value="{{name}}" placeholder="hotel name" required>
            </div>
            <br>
            <br>
            <label class="col-sm-4">Address</label>
            <input type="text" class="col-sm-4 input-group input-group-lgs" id="address" name="address" value="{{address}}" placeholder="hotel address" required>
            <br>
            <label class="col-sm-4" for="">Date</label>
            <input type="text" class="col-sm-4 input-group input-group-lg" id="date" name="date" value="{{date}}" placeholder="yyyy-mm-dd" required>
            <br>
            <input type="submit" value="Done" class="btn btn-primary">
            </form>
        </div>           
    </div>


<script src="../../../../js/jquery.plugin.min.js"></script>
