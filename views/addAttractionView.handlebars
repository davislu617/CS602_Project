<br>
<br>
    <div class="content container">
        <h2 class="col-xs-10 col-xs-offset-1 text">
            Add an Attraction in {{city.city}}
        </h2>
        <br>
        <hr>
        <div class="row textLarge">
            <form class="col-xs-8 col-xs-offset-2 text" method="post" action="/trip/attraction/add/{{tripId}}/{{city.destination_id}}">
            <label class="col-sm-4">Attraction</label>
            <div class="search col-sm-8">
            <input id="attraction" type="text" name="attraction" class="col-sm-6 input-group input-group-lg" placeholder="attractions in {{city.city}}" data-list=".hidden_mode_list" data-nodata="No results found" autocomplete="off">
            <ul class="searchList hidden_mode_list col-sm-6">
              {{#each data}}
              <li>{{this.name}}</li>
              {{/each}}
            </ul>
            </div>
            <br>
            <br>
            <label class="col-sm-4">Date</label>
            <input type="text" class="col-sm-4 input-group input-group-lgs" id="date" name="date" value={{date}} readonly>
            <br>
            <label class="col-sm-4">Time</label>
            <input type="text" class="col-sm-4 input-group input-group-lgs" id="time" name="time" value="10:00">
            <br>
            <input type="submit" value="Done" class="btn btn-primary">
            </form>
        </div>           
    </div>


<script src="../../../../js/jquery.plugin.min.js"></script>
<script src="../../../../js/jquery.timepicker.min.js"></script>
<script src="../../../../js/jquery.hideseek.min.js"></script>
<script>
    $('#time').timepicker({'timeFormat': 'H:i','scrollDefault': 'now'});
    $('#attraction').hideseek({
        hidden_mode: true
    });
</script>
{{{autoFill}}}